<div class="wrapper-grey padded">
  <div class="container">
    <h2 class="text-center">Criptocurrency Market</h2>
    <div class="form-group">
      <label for="sel1">View period</label>
      <select class="form-control" id="period">
        <option value="1D">1 Day</option>
        <option value="1W">1 Week</option>
        <option value="2W">2 Weeks</option>
        <option value="1M">1 Month</option>
        <option value="3M">3 Months</option>
        <option value="6M">6 Months</option>
        <option value="1Y">1 Year</option>
      </select>
    </div>

    <div id='widget-cards'>
      <% @currencies.map do |c| %>
      <div class="col-xs-6 col-sm-4 col-md-3">
        <div class="row">
          <script type="text/javascript">
            baseUrl = "https://widgets.cryptocompare.com/";
            var period = document.getElementById("period");
            var scripts = document.getElementsByTagName("script");
            var embedder = scripts[ scripts.length - 1 ];
            (function (){
              var appName = encodeURIComponent(window.location.hostname);
              if(appName==""){appName="local";}
              var s = document.createElement("script");
              s.type = "text/javascript";
              s.async = true;
              var theUrl = baseUrl+`serve/v2/coin/chart?fsym=<%= c.symbol %>&tsym=BRL&period=${period.value}`;
              s.src = theUrl + ( theUrl.indexOf("?") >= 0 ? "&" : "?") + "app=" + appName;
              embedder.parentNode.appendChild(s);
            })();
            period.addEventListener('change', function() {
              event.preventDefault();
              document.querySelectorAll('.ccc-widget').forEach((widget) => {
                widget.parentNode.removeChild(widget);
              });
              var appName = encodeURIComponent(window.location.hostname);
              if(appName==""){appName="local";}
              var s = document.createElement("script");
              s.type = "text/javascript";
              s.async = true;
              var theUrl = baseUrl+`serve/v2/coin/chart?fsym=<%= c.symbol %>&tsym=BRL&period=${period.value}`;
              s.src = theUrl + ( theUrl.indexOf("?") >= 0 ? "&" : "?") + "app=" + appName;
              embedder.parentNode.appendChild(s);
            });
          </script>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

