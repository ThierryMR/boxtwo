<h1 class="text-center">My Wallets <i class="fas fa-wallet"></i></h1>
<div class="container">
  <div class="row">
    <% @wallets.each do |wallet| %>
      <%= link_to wallet do %>
      <div class="col-xs-3">
        <div class="wallet">
          <h4><%= wallet.amount %></h4>
          <h4> <%= wallet.currency.name %></h4>
          <h5> Wallet Value</h5>
          <h5> <%=number_to_currency(wallet.currency.current_price * wallet.amount, precision: 2, delimiter: ',') %></h5>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
<%= link_to "Add Wallet", new_wallet_path %>
